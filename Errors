def create_report(results, output_filepath):
    doc = fitz.open()
    page = doc.new_page()
    page.insert_text((40, 20), "AGENDA COMPARISON REPORT", fontsize=16)

    y = 60
    left_margin = 40
    right_margin = 550  # Width = 510
    bottom_margin = 800  # Approx bottom of page
    line_spacing = 14

    for label, status in results:
        text = f"{label}: {status}"

        # Create a rectangle that spans from current y to bottom margin
        rect = fitz.Rect(left_margin, y, right_margin, bottom_margin)

        # Insert text; fitz will wrap it automatically in the rectangle
        text_inserted = page.insert_textbox(rect, text, fontsize=11)

        # Update y for next entry
        # Estimate number of lines inserted
        lines = text_inserted.count("\n") + 1  # at least 1 line
        y += lines * line_spacing + 10

        # If we reach bottom, start a new page
        if y > bottom_margin:
            page = doc.new_page()
            y = 40

    doc.save(output_filepath)
    doc.close()